{
  "name": "best-shop",
  "version": "1.0.0",
  "description": "Best Shop - Suitcases Store",
  "homepage": "https://bilets.github.io/Best-Shop",
  "repository": {
    "type": "git",
    "url": "https://github.com/bilets/Best-Shop.git"
  },
  "license": "ISC",
  "author": "Volodymyr Biletskyi",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "sass src/scss/main.scss dist/css/main.css",
    "watch:css": "sass --watch src/scss/main.scss dist/css/main.css",
    "serve": "live-server --port=3000 --open=/src/index.html",
    "dev": "npm-run-all compile --parallel watch:css serve",
    "lint:js": "eslint src/js/**/*.js",
    "lint:scss": "stylelint src/scss/**/*.scss",
    "lint": "npm-run-all lint:js lint:scss",
    "build": "npm run compile && npm run build:copy",
    "build:copy": "node scripts/copy-files.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "globals": "^15.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.93.3",
    "gh-pages": "^6.1.1"
  }
}
