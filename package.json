{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "license": "ISC",
  "author": "Volodymyr Biletskyi",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "sass src/scss/main.scss dist/css/main.css",
    "watch:css": "sass --watch src/scss/main.scss dist/css/main.css",
    "serve": "live-server --port=3000 --open=/src/index.html",
    "dev": "npm-run-all compile --parallel watch:css serve",
    "lint:js": "eslint src/js/**/*.js",
    "lint:scss": "stylelint src/scss/**/*.scss",
    "lint": "npm-run-all lint:js lint:scss",
    "build": "echo \"Dummy build script required for Autocode Compile\""
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "globals": "^15.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.93.3"
  }
}
